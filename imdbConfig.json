{
    "settings": {
        "analysis": {
            "filter": {
                "english_stop": {
                    "type": "stop",
                    "stopwords": "_english_"
                },
                "spanish_stop": {
                    "type": "stop",
                    "stopwords": "_spanish_"
                },
                "english_stemmer": {
                    "type": "stemmer",
                    "language": "english"
                },
                "spanish_stemmer": {
                    "type": "stemmer",
                    "language": "spanish"
                },
                "synonym_filter": {
                    "type": "synonym",
                    "synonyms": [
                      "spiderman => spiderMan",
                      "theavengers => theAvengers" 
                    ]
                  }
            },
            "char_filter": {
                "replace_and": {
                    "type": "mapping",
                    "mappings": [
                        "& => and"
                    ]
                }
            },
            "analyzer": {
                "custom_english_spanish": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "asciifolding",
                        "synonym_filter",
                        "word_delimiter_graph",
                        "lowercase",
                        "english_stop",
                        "spanish_stop"
                        
                    ],
                    "char_filter": [
                        "replace_and"
                    ]
                }
            }
        }
    }
}