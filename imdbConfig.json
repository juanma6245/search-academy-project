{
    "settings": {
        "analysis": {
            "filter": {
                "english_stop": {
                    "type": "stop",
                    "stopwords": "_english_"
                },
                "spanish_stop": {
                    "type": "stop",
                    "stopwords": "_spanish_"
                },
                "english_stemmer": {
                    "type": "stemmer",
                    "language": "english"
                },
                "spanish_stemmer": {
                    "type": "stemmer",
                    "language": "spanish"
                },
                "synonym_filter": {
                    "type": "synonym",
                    "synonyms": [
                        "spiderman => spiderMan",
                        "Spiderman => spiderMan",
                        "theavengers => theAvengers",
                        "batman => batMan"
                    ]
                },
                "shingle_filter": {
                    "type": "shingle",
                    "max_shingle_size": 3,
                    "min_shingle_size": 2,
                    "output_unigrams": true,
                    "token_separator": " "
                },
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_gram": 1,
                    "max_gram": 20
                }
            },
            "char_filter": {
                "replace_and": {
                    "type": "mapping",
                    "mappings": [
                        "& => and"
                    ]
                },
                "replace_": {
                    "type": "mapping",
                    "mappings": [
                        "_ => -"
                    ]
                }
            },
            "analyzer": {
                "custom_english": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "asciifolding",
                        "english_stop",
                        "synonym_filter",
                        "word_delimiter_graph",
                        "shingle_filter",
                        "lowercase"
                    ],
                    "char_filter": [
                        "replace_and",
                        "replace_"
                    ]
                },
                "auto": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                }
            }
        }
    }
}